@using storeroom.Application.Catalog.Users.Dtos
@model LoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/resources/css/Item.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Lato", sans-serif;
        }



        .main-head {
            height: 150px;
            background: #460526;
        }

        .sidenav {
            height: 100%;
            background-color: #460526;
            overflow-x: hidden;
            padding-top: 20px;
        }


        .main {
            padding: 0px 10px;
        }

        .login-main-text {
            margin-top: 20%;
            padding: 60px;
            color: #fff;
        }

            .login-main-text h2 {
                font-weight: 300;
            }

        .btn-black {
            background-color: #000 !important;
            color: #fff;
        }
    </style>

</head>
<body>
    <div class="sidenav">
        <div class="login-main-text">
            <h2>Storeroom<br> Management</h2>
            <p>The best choice for you</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                <form asp-action="Login" asp-controller="Login" method="post">
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        <input type="text" class="form-control" asp-for="UserName" name="username" placeholder="Tên đăng nhập">
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input type="password" class="form-control" asp-for="Password" name="password" placeholder="Mật khẩu">
                    </div>
                    <div class="col-md-12">
                        <input type="checkbox" name="remember_me" asp-for="RememberMe">
                        <label for="">Lưu thông tin</label>
                    </div>
                    <a href="" class="col-md-6 col-sm-12">Quên mật khẩu?</a>
                    <button type="submit" name="submit" class="btn btn-primary col-md-6 col-sm-12 ml-5">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</body>
</html>



